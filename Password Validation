#check if both boxes are filled
def submit():
    passAccepted.pack(pady = 10)
    if username.get() != "" and password.get() != "":
        passAccepted.configure(app, text="Password accepted!", font=("Calibri", 20, "bold"), fg_color="#FFC86B", text_color = "#00BF00")
    elif password.get() == "" and username.get() == "":
        passAccepted.configure(app, text="Please enter a username and password.", font=("Calibri", 20, "bold"), fg_color="#FFC86B", text_color = "red")
    elif username.get() == "":
        passAccepted.configure(app, text="Please enter a username.", font=("Calibri", 20, "bold"), fg_color="#FFC86B", text_color = "red")
    else:
        passAccepted.configure(app, text="Please enter a password.", font=("Calibri", 20, "bold"), fg_color="#FFC86B", text_color = "red")

#create password acceptance text
passAccepted = customtkinter.CTkLabel(app, text="Password accepted!", font=("Calibri", 20, "bold"), fg_color="#FFC86B", text_color = "#00BF00")
